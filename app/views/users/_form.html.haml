= form_for(@user, remote: true, :html => { :role => "form" }) do |f|
  #error_explanation.bg-danger.text-danger
  .row
    .col-md-12
      .form-group
        = f.label :name, :class => "control-label"
        = f.text_field :name, :class => "form-control first_input"
      .form-group
        = f.label :title, :class => "control-label"
        = f.text_field :title, :class => "form-control"
      .form-group
        = f.label :email, :class => "control-label"
        = f.text_field :email, :class => "form-control"
      .form-group
        = f.label :phone_number, :class => "control-label"
        = f.telephone_field :phone_number, :class => "form-control"
      .form-group
        = f.label :status, :class => "control-label"
        = select_tag :status, options_for_select(User.statuses.map {|k, v| [k.humanize.capitalize, v]}), :class => "form-control"
      .form-group
        = f.submit  @user.new_record? ? "Create User" : "Update User", :class => "btn btn-primary"

