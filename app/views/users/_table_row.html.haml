%tr{id: "user_#{user.id}"}
  %td= user.updated_at
  %td= user.name
  %td= user.email
  %td= user.title
  %td= user.phone_number
  %td{user.status == "active" ? {:style => "color: green"} : {:style => "color: red"}}= user.status
  %td= link_to 'Edit', edit_user_path(user), remote: true
  %td= link_to 'Delete', user, remote: true, method: :delete, data: { confirm: 'Are you sure?' }
