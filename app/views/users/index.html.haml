%h1 Listing users

%table
  %thead
    %tr
      %th Name
      %th Email
      %th Title
      %th Phone number
      %th Status
      %th{:colspan => 3} Actions

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= user.title
        %td= user.phone_number
        %td= user.status
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New User', new_user_path
